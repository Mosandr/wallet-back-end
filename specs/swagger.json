{
  "openapi": "3.0.0",
  "info": {
    "title": "Wallet API",
    "description": "API for Wallet application that save your expencies and make dashbord with statistics",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "totalBalance": {
            "type": "number",
            "description": "Calculated by Server"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "Transaction": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "timestamp": {
            "type": "number",
            "description": "Time stamp in ms"
          },
          "date": {
            "type": "string",
            "description": "Date in format DD/MM/20YY"
          },
          "month": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "year": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "type": {
            "type": "string",
            "description": "Enum {\"+\" or \"-\"}"
          },
          "category": {
            "type": "string",
            "description": "Category Id"
          },
          "comment": {
            "type": "string"
          },
          "sum": {
            "type": "number",
            "description": "Number >=0"
          },
          "owner": {
            "type": "string",
            "description": "User Id"
          },
          "monthlyBalance": {
            "type": "number",
            "description": "Calculated by server Monthly balance at time of transaction"
          }
        },
        "required": [
          "timestamp",
          "type",
          "category",
          "sum"
        ]
      },
      "Category": {
        "properties": {
          "id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "Enum {\"+\" or \"-\"}"
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Transactions"
    },
    {
      "name": "Categories"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "summary": "Create new user.",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}