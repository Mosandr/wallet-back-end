{
  "openapi": "3.0.0",
  "info": {
    "title": "Wallet API",
    "description": "API for Wallet application that save your expencies and make dashbord with statistics",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "totalBalance": {
            "type": "number",
            "description": "Calculated by Server"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "Transaction": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "timestamp": {
            "type": "number",
            "description": "Time stamp in ms"
          },
          "date": {
            "type": "string",
            "description": "Date in format DD/MM/20YY"
          },
          "month": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "year": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "type": {
            "type": "string",
            "description": "Enum {\"+\" or \"-\"}"
          },
          "category": {
            "type": "string",
            "description": "Category Id"
          },
          "comment": {
            "type": "string"
          },
          "sum": {
            "type": "number",
            "description": "Number >=0"
          },
          "owner": {
            "type": "string",
            "description": "User Id"
          },
          "monthlyBalance": {
            "type": "number",
            "description": "Calculated by server Monthly balance at time of transaction"
          }
        },
        "required": [
          "timestamp",
          "type",
          "category",
          "sum"
        ]
      },
      "Category": {
        "properties": {
          "id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "Enum {\"+\" or \"-\"}"
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Transactions"
    },
    {
      "name": "Categories"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "summary": "Create new user",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Andriy"
                  },
                  "email": {
                    "type": "string",
                    "example": "andriy@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "succes"
                    },
                    "code": {
                      "type": "number",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Registaration successful"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "andriy@gmail.com"
                        },
                        "name": {
                          "type": "string",
                          "example": "Andriy"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 409
                    },
                    "message": {
                      "type": "string",
                      "example": "Email is already in use"
                    }
                  }
                }
              }
            }
          },
          "429": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 429
                    },
                    "message": {
                      "type": "string",
                      "example": "Too many accounts created from this IP, please try again after an hour"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login user",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "andriy@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "succes"
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successful login"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "object",
                          "properties": {
                            "email": {
                              "type": "string",
                              "example": "andriy@gmail.com"
                            },
                            "name": {
                              "type": "string",
                              "example": "Andriy"
                            },
                            "token": {
                              "type": "string",
                              "example": "token"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Email or password is wrong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Logout user",
        "tags": [
          "Users"
        ],
        "responses": {
          "204": {
            "description": "No content (in case of successful logout)"
          },
          "401": {
            "description": "Unauthorized (invalid token)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/current": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Get current authenticated user",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "succes"
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Find current user"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string",
                              "example": "Andriy"
                            },
                            "email": {
                              "type": "string",
                              "example": "andriy@gmail.com"
                            },
                            "totalBalance": {
                              "type": "number",
                              "example": 200.55
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid token)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}