{
  "openapi": "3.0.0",
  "info": {
    "title": "Wallet API",
    "description": "API for Wallet application that save your expencies and make dashbord with statistics",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "Transaction": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "date": {
            "type": "string"
          },
          "month": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "year": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "type": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "sum": {
            "type": "number"
          }
        },
        "required": [
          "date",
          "type",
          "category",
          "comment",
          "sum"
        ]
      },
      "Category": {
        "properties": {
          "id": {
            "type": "integer",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "owner": {
            "type": "string",
            "description": "owner ID"
          }
        },
        "required": [
          "name"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "users"
    },
    {
      "name": "transactions"
    },
    {
      "name": "categories"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "summary": "Create new user.",
        "tags": [
          "users"
        ],
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}